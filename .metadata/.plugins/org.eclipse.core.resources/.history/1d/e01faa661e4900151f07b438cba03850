#ifndef ADAPTIVITY_H_
#define ADAPTIVITY_H_

#include <atop/fem/fem.h>
#include <atop/TopologyOptimization/projection.h>
#include <string>

namespace atop{
	template <int dim>
	class Adaptivity{
	public:
		FEM<dim> *fem;
		void update(
				FEM<dim> &obj_fem
				);

		void mesh_adaptivity_update(
				std::string& mesh_update_str);
	};
}



#endif /* ADAPTIVITY_H_ */
